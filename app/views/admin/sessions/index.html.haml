.container#admin-login
  .row
    .main-col.col-sm-6.col-sm-offset-3
      .well
        = form_tag admin_login_path do
          .form-group
            = label_tag :username, 'Username'
            = text_field_tag :username, nil, class: 'form-control'
          .form-group
            = label_tag :password, 'Password'
            = password_field_tag :password, nil, class: 'form-control'
          = submit_tag 'Sign In', class: 'btn btn-default'
      %div.login-footer
        = link_to front_path do
          %span.glyphicon.glyphicon-arrow-left
          Back to Main
